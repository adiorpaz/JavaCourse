
public class WomenClassExercise {
	
	//Attributes of an object
	String name;
	int age;
	int realAge;
	
	//Reveal the real name of the object - if the age is more than 30.
	public void condition() {
	 if (age >= 30) {
	        realAge = age + 5;
	                System.out.println("You caught me lying.. my real age is :" + realAge);
	}
}

	public void displayMsg() {
		System.out.println("I am " + name);
		System.out.println("My age is :" + age);
}
	
	public static void main(String[] args) {
		// Instance Variables
		WomenClassExercise Adi = new WomenClassExercise();		
		Adi.name = "Adi Orpaz";
		Adi.age = 23;
		Adi.realAge = 23;
		Adi.displayMsg();
		Adi.condition();
		
		WomenClassExercise Kim = new WomenClassExercise();
		Kim.name = "Kim Yekutiel";
		Kim.age = 22;
		Kim.realAge = 20;
		Kim.displayMsg();
		Kim.condition();
		WomenClassExercise Eden = new WomenClassExercise();
		Eden.name = "Eden Dayan";
		Eden.age = 30;
		Eden.realAge = 23;
		Eden.displayMsg();
		Eden.condition();
		}
	}
